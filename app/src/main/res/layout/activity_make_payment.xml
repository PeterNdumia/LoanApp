<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakePaymentActivity"
    android:layout_margin="20dp">


    <TextView
        android:id="@+id/repaymentLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loan Repayment"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:id="@+id/loanAmountLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/repaymentLbl"
        />

    <TextView
        android:id="@+id/paymentLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the amount you wish to repay"
        android:layout_below="@id/loanAmountLbl"
        android:layout_marginTop="30dp"/>
    <EditText

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/paymentAmountTxt"
        android:layout_below="@id/paymentLbl"
        android:gravity="center"
        android:hint="500"
        android:inputType="number"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:background="@drawable/edittext_backgroud">
        <requestFocus/>
    </EditText>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/makePaymentBtn"
        android:text="Make Payment"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
       android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_background"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>